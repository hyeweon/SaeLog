<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".NewCategoryActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="6dp"
        app:menu="@menu/new_category_toolbar_items">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="카테고리"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.5dp"
                android:textColor="@color/gray4"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="제목"/>
            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/gray2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@null"
                android:hint="제목을 입력해 주세요." />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8.5dp"
                android:layout_marginBottom="15dp"
                android:background="@color/gray2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/gray4"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="테마"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardView"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        app:cardCornerRadius="55dp"
                        app:cardElevation="0dp">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="0dp">
                            <ImageView
                                android:id="@+id/thumbnail"
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/test_image"/>
                        </com.google.android.material.card.MaterialCardView>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:text="대표 이미지"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/theme"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="12dp"
                            android:backgroundTint="@color/coral"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/coral"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"/>
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="15dp"
                            android:backgroundTint="@color/indigo"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/indigo"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="12dp"
                            android:backgroundTint="@color/yellow"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"/>
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="12dp"
                            android:backgroundTint="@color/purple"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/purple"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="12dp"
                            android:backgroundTint="@color/green"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/green"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"/>
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="12dp"
                            android:backgroundTint="@color/pink"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/pink"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="12dp"
                            android:backgroundTint="@color/blue"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"/>
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="12dp"
                            android:backgroundTint="@color/gray"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@color/gray2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:textColor="@color/gray4"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="유형"/>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="385dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <View
                    android:layout_width="110dp"
                    android:layout_height="1dp"
                    android:layout_marginVertical="20dp"
                    android:layout_gravity="center"
                    android:background="#707070"/>
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/indicator"
                    android:layout_width="126dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    app:tabBackground="@drawable/category_type_indicator_selector"
                    app:tabIndicator="@null">
                </com.google.android.material.tabs.TabLayout>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아카이빙 유형에 대한 설명이 들어가는 자리. 사진 썸네일 비율이나 추천하는 용도 등"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="31dp"
                android:background="@color/gray2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray4"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="항목 만들기"/>
            <LinearLayout
                android:id="@+id/content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray4"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="1. " />
                <EditText
                    android:id="@+id/content1Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/gray2"
                    android:textColor="@color/gray4"
                    android:textSize="15sp"
                    android:background="@null"
                    android:hint="항목을 입력해주세요" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="129dp"
                    android:layout_height="26dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/spinner_content_type"
                    android:gravity="center"
                    />
                <ImageButton
                    android:layout_width="17dp"
                    android:layout_height="19dp"
                    android:layout_gravity="end"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:src="@drawable/icon_delete"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/content2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray4"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="2. " />
                <EditText
                    android:id="@+id/content2Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/gray2"
                    android:textColor="@color/gray4"
                    android:textSize="15sp"
                    android:background="@null"
                    android:hint="항목을 입력해주세요" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="129dp"
                    android:layout_height="26dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="14dp"
                    android:gravity="center"/>
                <ImageButton
                    android:layout_width="17dp"
                    android:layout_height="19dp"
                    android:layout_gravity="end"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:src="@drawable/icon_delete"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/content3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray4"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="3. " />
                <EditText
                    android:id="@+id/content3Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/gray2"
                    android:textColor="@color/gray4"
                    android:textSize="15sp"
                    android:background="@null"
                    android:hint="항목을 입력해주세요" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="129dp"
                    android:layout_height="26dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="14dp"
                    android:gravity="center"/>
                <ImageButton
                    android:layout_width="17dp"
                    android:layout_height="19dp"
                    android:layout_gravity="end"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:src="@drawable/icon_delete"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/content4"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray4"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="4. " />
                <EditText
                    android:id="@+id/content4Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/gray2"
                    android:textColor="@color/gray4"
                    android:textSize="15sp"
                    android:background="@null"
                    android:hint="항목을 입력해주세요" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Spinner
                    android:id="@+id/spinner4"
                    android:layout_width="129dp"
                    android:layout_height="26dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="14dp"
                    android:gravity="center"/>
                <ImageButton
                    android:layout_width="17dp"
                    android:layout_height="19dp"
                    android:layout_gravity="end"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:src="@drawable/icon_delete"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnContentAdd"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="35dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="항목 추가 (1/8)"
                android:drawableLeft="@drawable/icon_add"
                android:drawableTint="@color/white"
                android:onClick="mOnClick"/>

            <Button
                android:id="@+id/btnSave1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="save"
                android:onClick="saveOnClick"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>