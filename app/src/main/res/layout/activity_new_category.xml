<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".NewCategoryActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="6dp"
        app:menu="@menu/new_category_toolbar_items"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.5dp"
                android:textColor="@color/gray4"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="제목"/>
            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/gray2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@null"
                android:hint="제목을 입력해 주세요." />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8.5dp"
                android:layout_marginBottom="15dp"
                android:background="@color/gray2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/gray4"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="테마"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardView"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        app:cardCornerRadius="55dp"
                        app:cardElevation="0dp">
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="0dp">
                            <ImageView
                                android:id="@+id/thumbnail"
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_add_photo_resize"/>
                        </com.google.android.material.card.MaterialCardView>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:text="대표 이미지"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/theme"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="12dp"
                            android:backgroundTint="@color/coral"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/coral"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"/>
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="15dp"
                            android:backgroundTint="@color/indigo"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/indigo"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="12dp"
                            android:backgroundTint="@color/yellow"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"/>
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="12dp"
                            android:backgroundTint="@color/purple"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/purple"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="12dp"
                            android:backgroundTint="@color/green"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/green"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"/>
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="12dp"
                            android:backgroundTint="@color/pink"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/pink"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="12dp"
                            android:backgroundTint="@color/blue"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"/>
                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginRight="12dp"
                            android:backgroundTint="@color/gray"
                            android:background="@drawable/icon_theme"
                            />
                        <CheckBox
                            android:id="@+id/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@color/gray2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:textColor="@color/gray4"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="유형"/>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="385dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <View
                    android:layout_width="110dp"
                    android:layout_height="1dp"
                    android:layout_marginVertical="20dp"
                    android:layout_gravity="center"
                    android:background="#707070"/>
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/indicator"
                    android:layout_width="126dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    app:tabBackground="@drawable/category_type_indicator_selector"
                    app:tabIndicator="@null">
                </com.google.android.material.tabs.TabLayout>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아카이빙 유형에 대한 설명이 들어가는 자리. 사진 썸네일 비율이나 추천하는 용도 등"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="31dp"
                android:background="@color/gray2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray4"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="항목 만들기"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/contentRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />
            <Button
                android:id="@+id/btnContentAdd"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="35dp"
                android:drawableLeft="@drawable/icon_plus"
                android:background="@drawable/btn_content_add"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="항목 추가하기 (1/8)"
                android:onClick="mOnClick"/>
            <Button
                android:id="@+id/btnSave1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="save"
                android:onClick="saveOnClick"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>